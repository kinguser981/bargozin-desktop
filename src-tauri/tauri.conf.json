{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bargozin",
  "version": "0.1.0",
  "identifier": "com.bargozin.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Bargozin",
        "width": 1246,
        "height": 740,
        "minWidth": 1246,
        "minHeight": 740
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
